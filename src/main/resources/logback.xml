<configuration scan="true">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>nexbook.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="TRADES" class="ch.qos.logback.core.FileAppender">
        <file>trades.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="quickfix.mina.NetworkingOptions" level="warn"/>
    <logger name="quickfix.mina.message.FIXMessageDecoder" level="info"/>
    <logger name="com.mongodb.casbah" level="info"/>

    <logger name="org.nexbook.handler.ResponseJsonLoggingHandler" level="debug" additivity="false">
        <appender-ref ref="TRADES"/>
    </logger>

    <root level="debug">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>